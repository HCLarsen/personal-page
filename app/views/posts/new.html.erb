<%= form_for(@post, html: { multipart: true }) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :content %>
  <%= f.text_area :content, placeholder: "Compose new blog post...", rows: 4 %>

  <%= f.submit "Post", class: "btn btn-primary" %>
<% end %>
