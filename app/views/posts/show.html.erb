<div class="row content">
  <article class="col-sm-9 blog-main">
    <h1><%= @post.title %></h1>
    <p><%= @post.created_at.to_date  %></p>
    <p><%= @post.content %></p>

    <section id="comments">
      <h3>Comments</h3>
      <%= render @post.comments %>

      <%= render 'comments/new', post: @post %>
    </section>


    <footer id="blog-footer">
      <% if @post != Post.first %>
        <%= link_to "Previous Post", @post.previous, class: "previous" %>
      <% end %>
      <% if admin_signed_in? %>
        <%= link_to "Create New Post", new_post_path %>
      <% end %>
      <% if @post != Post.last %>
        <%= link_to "Next Post", @post.next, class: "next" %>
      <% end %>
    </footer>
  </article>

  <%= render 'index' %>
</div>
